[
  {
    "type": "container",
    "title": "Dump1090",
    "description": "Dump1090 server",
    "categories": ["docker"],
    "platform": "linux",
    "privileged": true,
    "image": "opensourcefoundries/dump1090:latest",
    "ports": ["8080/tcp"],
    "restart_policy": "unless-stopped",
    "volumes": [
      {
        "container": "/dev/bus/usb",
        "bind": "/dev/bus/usb"
      }
    ]
  },
  {
    "type": "container",
    "title": "leshan",
    "description": "Eclipse Foundation's Leshan Server for LWM2M",
    "categories": ["IoT Gateway"],
    "network": "host",
    "ports": [
      "8081/tcp",
      "5683/udp",
      "5684/udp"
    ],
    "platform": "linux",
    "image": "opensourcefoundries/leshan:latest",
    "restart_policy": "unless-stopped",
    "env" : [
      {
        "name": "LESHAN_ARGS",
        "set": "-wp 8081"
      }
    ]
  },
  {
    "type": "container",
    "title": "bt-joiner",
    "description": "Bluetooth low-energy device server",
    "categories": ["IoT Gateway"],
    "platform": "linux",
    "image": "opensourcefoundries/bt-joiner:latest",
    "restart_policy": "unless-stopped",
    "volumes": [
      {
        "container": "/etc/bluetooth/bluetooth_6lowpand.conf",
        "bind": "/home/osf/bluetooth_6lowpand.conf"
      }
    ]
  },
  {
    "type": "container",
    "title": "Nginx CoAP Proxy",
    "description": "CoAP Proxy",
    "categories": ["IoT Gateway"],
    "platform": "linux",
    "logo": "https://cloudinovasi.id/assets/img/logos/nginx.png",
    "image": "nginx:latest",
    "command": "nginx-debug -g 'daemon off;'",
    "network": "host",
    "restart_policy": "unless-stopped",
    "volumes": [
      {
        "container":"/etc/nginx/nginx.conf",
        "bind": "/home/osf/nginx-lwm2m.conf"
      }
    ]
  }
]
